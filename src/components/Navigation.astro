---
import logo from "../images/logo.svg";
---

<div class="over">
  <nav>
    <img src={logo} alt="" class="logo" onclick="window.location='/'" />
    <button class="nav-btn" onclick="window.location='/'"> Home</button>
    <button class="nav-btn" onclick="window.location='/blog'">Blog</button>
  </nav>
</div>
<!-- <div class="progress-container" id="progress-container">
  <div class="progress-bar" id="my-bar"></div>
</div> -->

<style>
  .over {
    position: relative;
    overflow-x: hidden;
  }
  nav {
    position: fixed;
    background: black;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: space-around;
    gap: 10px;
    z-index: 9;
    right: 0;
    left: 0;
  }

  .logo {
    height: 48px;
    width: 7rem;
    object-fit: cover;
    filter: invert(1);
    margin-right: auto;
    margin-left: 32px;
    cursor: pointer;
  }

  .logo:hover,
  .logo:focus {
    filter: invert(1) opacity(0.8);
  }

  nav button:last-child {
    margin-right: 32px;
  }

  .nav-btn {
    font-family: inter;
    height: 32px;
    border-radius: 100px;
    font-size: 14px;
    padding: 0 12px;
    background-color: black;
    color: white;
    border: 1px solid white;
    transition: 0.15 s ease-in-out;
    cursor: pointer;
  }

  .nav-btn:hover,
  .nav-btn:active {
    background-color: white;
    color: black;
  }

  .progress-container {
    background-color: #495057;
    height: 5px;
    width: 100vw;
    display: none;
  }

  .progress-bar {
    background-color: #51cf66;
    height: 5px;
    display: none;
    width: 0%;
    transition: 0.07s;
  }
</style>
