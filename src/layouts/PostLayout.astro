---
import BaseLayout from "./BaseLayout.astro";
import "./PostLayout.css";
const { frontmatter } = Astro.props;
---

<BaseLayout divClass="blog">
  <h1 class="blog__heading">{frontmatter.title}</h1>
  <slot />
  <p class="blog__date">{frontmatter.blogDate}</p>
</BaseLayout>

<style>
  h1 {
    /* margin-top: 128px; */
    text-align: center;
  }

  @media (width >= 900px) {
    .post-heading {
      font-size: 72px;
    }
  }
</style>
