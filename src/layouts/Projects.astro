<style>
  .projects {
    /* height: 900px; */
    /* background-color: #f1f3f5; */
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 48px;
    margin: 0 auto;
    height: 130vh;
  }

  .projects__heading {
    /* grid-column: 1 / span 3; */
    text-align: center;
    font-family: Merriweather;
    margin-top: 64px;
    margin-bottom: 36px;
    font-size: 44px;
  }

  .projects p {
    font-size: 18px;
    line-height: 2;
    grid-column: 1 / span 3;
    margin: 0 30px;
  }

